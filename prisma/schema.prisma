generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//better-auth tables

model User{
  id String @id @default(cuid())
  name String?
  email String @unique
  emailVerified Boolean @default(false)
  image String? 
  createdAt DateTime @default(now())
  sessions Session[]
}

model Session{
  id String @id @default(cuid())
  userId String
  expiresAt DateTime
  token String
  user User @relation(fields: [userId], references: [id])

}

model Verification{
  id String @default(cuid())
  identifier String
  value String @unique
  expiresAt DateTime
}